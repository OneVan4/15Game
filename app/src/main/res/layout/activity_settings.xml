<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings_activity"
    android:background="@drawable/backgrnd"
    >

    <ImageButton
        android:id="@+id/save_buton"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:background="@drawable/savebuttext"
        android:onClick="save_OC"
        android:text="сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_Switch"
        app:layout_constraintVertical_bias="0.699" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="138dp"
        android:layout_height="177dp"
        android:onClick="Goose_OC"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.606"
        app:srcCompat="@drawable/goose" />

    <Switch
        android:id="@+id/vibro_Switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/century_gothic"
        android:text="Вибрация"
        android:textColor="@color/black"
        android:thumbTint="#35241c"
        android:trackTint="#604944"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="@+id/sound_Swithcher"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sound_Swithcher"
        app:layout_constraintTop_toBottomOf="@+id/sound_Swithcher" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/century_gothic"
        android:text="Громкость "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarM"
        app:layout_constraintStart_toEndOf="@+id/seekBarM"
        app:layout_constraintTop_toTopOf="@+id/seekBarM"
        app:layout_constraintVertical_bias="0.636" />

    <SeekBar
        android:id="@+id/seekBarM"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="@+id/seekBar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seekBar2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:thumbTint="#35241c"
        android:progressTint="#604944"
        />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="195dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="@font/century_gothic"
        android:inputType="textPersonName"
        android:maxLength="26"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="@+id/seekBar2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/century_gothic"
        android:text="Сменить имя "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="@+id/vibro_Switcher"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vibro_Switcher"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.076" />

    <Switch
        android:id="@+id/con_Switch"
        android:layout_width="192dp"
        android:layout_height="53dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/century_gothic"
        android:text="Поздравления от персонажа"
        android:textColor="@color/black"
        android:thumbTint="#35241c"
        android:trackTint="#604944"
        app:layout_constraintBottom_toBottomOf="@+id/switch7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/switch7"
        app:layout_constraintTop_toBottomOf="@+id/CharacterSelector" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/CharacterSelector"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/andre" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="180dp"
        android:layout_height="23dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/century_gothic"
        android:text="Выберите персонажа"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/CharacterSelector"
        app:layout_constraintEnd_toEndOf="@+id/con_Switch"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="@+id/con_Switch" />

    <Switch
        android:id="@+id/CharacterSelector"
        android:layout_width="77dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/con_Switch"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/con_Switch"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.61"
        android:thumbTint="#35241c"
        android:trackTint="#604944"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="97dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/CharacterSelector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CharacterSelector"
        app:layout_constraintTop_toTopOf="@+id/CharacterSelector"
        app:layout_constraintVertical_bias="0.653"
        app:srcCompat="@drawable/katya" />

    <Switch
        android:id="@+id/sound_Swithcher"
        android:layout_width="109dp"
        android:layout_height="31dp"
        android:fontFamily="@font/century_gothic"
        android:text="Звук"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarM"
        app:layout_constraintEnd_toEndOf="parent"
        android:thumbTint="#35241c"
        android:trackTint="#604944"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/century_gothic"
        android:text="Cила вибрации"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/seekBarM"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic"
        android:text="Гусь"
        android:textColor="@color/black"
        android:thumbTint="#35241c"
        android:trackTint="#604944"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="103dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toEndOf="@+id/vibro_Switcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969"
        android:thumbTint="#35241c"
        android:progressTint="#604944"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="349dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>